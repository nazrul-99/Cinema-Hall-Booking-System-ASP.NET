@*define model*@

@model IEnumerable<Actor> 

@*define viewdata*@
@{ 
    ViewData["Title"] = "List of Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var actor in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@actor.ProfilePictureURL" alt="@actor.FullName" style="max-width: 150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelActor => actor.FullName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelActor => actor.Bio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> |
                        <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
                }
            </tbody>
            <tr>
                <td></td>
            </tr>
        </table>
    </div>
</div>

<h1>Your are browsing Actors View - Index</h1>